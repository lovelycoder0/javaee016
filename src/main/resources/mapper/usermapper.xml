<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.mapper.Usermapper">

    <select id="selectUser" resultType="com.example.demo.model.User">
        select * from user where username = #{username} and password = #{password} and authority=#{authority};
    </select>

    <!--新增-->
    <insert id="insertUser">
        insert user (username,password,authority) values (#{username},#{password},#{authority});
    </insert>
</mapper>